import pyttsx3

# Initialize engine
engine = pyttsx3.init()

# Set properties (optional)
engine.setProperty('rate', 150)      # Speed (words per minute)
engine.setProperty('volume', 1.0)    # Volume (0.0 to 1.0)

# Text input
text = input("Enter text to speak: ")

# Convert text to speech
engine.say(text)
engine.runAndWait()
